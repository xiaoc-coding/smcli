#!/usr/bin/env python3
"""
SM-CLI 启动脚本
支持本地和全局执行
"""

import sys
import os

# 获取脚本所在目录（项目根目录）
SCRIPT_DIR = os.path.dirname(os.path.abspath(__file__))

# 添加项目目录到 Python 路径
if SCRIPT_DIR not in sys.path:
    sys.path.insert(0, SCRIPT_DIR)

# 导入并运行主程序
from sm_cli import main

if __name__ == "__main__":
    main()
